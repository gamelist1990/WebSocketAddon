{
    "namespace": "server_form",
    "long_form": {
        "type": "panel",
        "controls": [
            {
                "long_form@common_dialogs.main_panel_no_buttons": {
                    "$title_panel": "common_dialogs.standard_title_label",
                    "$title_size": [
                        "100% - 14px",
                        10
                    ],
                    "size": [
                        225,
                        200
                    ],
                    "$text_name": "#title_text",
                    "$title_text_binding_type": "none",
                    "$child_control": "server_form.long_form_panel",
                    "layer": 2,
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(((#title_text - '§c§h§e§s§t') = #title_text) and ((#title_text - '§f§u§r§n§a§c§e') = #title_text) and ((#title_text - '§m§d') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "chest_ui@chest_ui.chest_panel": {
                    "visible": false,
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "((not ((#title_text - '§c§h§e§s§t') = #title_text)) and ((#title_text - '§m§d') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "furnace_ui@furnace_ui.furnace_panel": {
                    "ignored": "$disable_furnace_ui",
                    "visible": false,
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "((not ((#title_text - '§f§u§r§n§a§c§e') = #title_text)) and ((#title_text - '§m§d') = #title_text))",
                            "target_property_name": "#visible"
                        }
                    ]
                }
            },
            {
                "hive_button_image_grid@hive_image_grid_modal.main_panel": {
                    "enabled": false,
                    "visible": false,
                    "bindings": [
                        {
                            "binding_type": "global",
                            "binding_condition": "none",
                            "binding_name": "#title_text",
                            "binding_name_override": "#title_text"
                        },
                        {
                            "source_property_name": "(not ((#title_text - '§m§d') = #title_text))",
                            "binding_type": "view",
                            "target_property_name": "#visible"
                        },
                        {
                            "source_property_name": "(not ((#title_text - '§m§d') = #title_text))",
                            "binding_type": "view",
                            "target_property_name": "#enabled"
                        }
                    ]
                }
            }
        ]
    },
    "long_form_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "content_label": {
                    "type": "label",
                    "text": "Default Content",
                    "offset": [
                        5,
                        5
                    ]
                }
            }
        ]
    }
}